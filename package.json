{
    "name": "robot-manager-frontend",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "start": "NODE_ENV=production ts-node server/main.js",
        "dev": "nodemon server/main.js -w server",
        "build": "vite build",
        "prepare": "husky install"
    },
    "dependencies": {
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "devDependencies": {
        "@types/node": "^20.6.0",
        "@vitejs/plugin-react": "^4.0.0",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "vite": "^4.3.9",
        "vite-plugin-svgr": "^3.2.0",
        "vite-tsconfig-paths": "^4.2.0"
    },
    "prettier": {
        "tabWidth": 4
    },
    "lint-staged": {
        "{client,server}/**/*.{html,js,ts,scss}": [
            "prettier --write"
        ],
        "{client,server}/**/*.ts": [
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "packageManager": "yarn@4.0.2"
}
